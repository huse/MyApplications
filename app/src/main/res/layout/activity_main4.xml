<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



        <EditText
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="1"
            android:id="@+id/button1"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="2"
            android:id="@+id/button2"
            android:layout_below="@+id/editText"
            android:layout_toRightOf="@+id/button1"
            android:layout_marginTop="15dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="3"
            android:id="@+id/button3"
            android:layout_below="@+id/editText"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginTop="15dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="+"
            android:id="@+id/buttonAdd"
            android:layout_below="@+id/editText"
            android:layout_toRightOf="@+id/button3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="4"
            android:id="@+id/button4"
            android:layout_below="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="5"
            android:id="@+id/button5"
            android:layout_below="@+id/button1"
            android:layout_toRightOf="@+id/button1"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="6"
            android:id="@+id/button6"
            android:layout_below="@+id/button1"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="-"
            android:id="@+id/buttonSub"
            android:layout_below="@+id/button1"
            android:layout_toRightOf="@+id/button3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="7"
            android:id="@+id/button7"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="8"
            android:id="@+id/button8"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button1"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="9"
            android:id="@+id/button9"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="*"
            android:id="@+id/buttonMulti"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            />


        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="."
            android:id="@+id/buttonDot"
            android:layout_below="@+id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="0"
            android:id="@+id/button0"
            android:layout_below="@+id/button8"
            android:layout_toRightOf="@+id/button1"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="="
            android:id="@+id/buttonEqual"
            android:layout_below="@+id/button8"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="/"
            android:id="@+id/buttonDevide"
            android:layout_below="@+id/buttonMulti"
            android:layout_toRightOf="@+id/buttonEqual"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="C"
            android:id="@+id/buttonClear"
            android:layout_below="@+id/buttonDot"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="Back"
            android:id="@+id/buttonBack"
            android:layout_below="@+id/buttonDot"
            android:layout_toRightOf="@+id/button1"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="Pow"
            android:id="@+id/buttonPower"
            android:layout_below="@+id/buttonDot"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="Sqrt"
            android:id="@+id/buttonSqrt"
            android:layout_below="@+id/buttonDot"
            android:layout_toRightOf="@+id/buttonEqual"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="Mc"
            android:id="@+id/buttonMC"
            android:layout_below="@+id/buttonClear"

            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="MS"
            android:id="@+id/buttonMS"
            android:layout_below="@+id/buttonClear"
            android:layout_toRightOf="@+id/buttonMC"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="MR"
            android:id="@+id/buttonMR"
            android:layout_below="@+id/buttonClear"
            android:layout_toRightOf="@+id/buttonMS"
            android:layout_marginTop="5dp"

            />
        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="-+"
            android:id="@+id/buttonMinus"
            android:layout_below="@+id/buttonClear"
            android:layout_toRightOf="@+id/buttonEqual"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"

            />

</RelativeLayout>
